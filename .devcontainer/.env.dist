# Application Settings
APP_NAME=sse-mcp-template
APP_PORT=5001
APP_ENV=development
DESCRIPTION=A template for building MCP servers using SSE transport
VERSION=1.0.0

# API Configuration
API_V1_STR=/mcp/v1
DEBUG=true

# CORS Settings (comma-separated for multiple origins)
ALLOWED_ORIGINS=*

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=console
LOG_DIR=logs

# Rate Limiting
RATE_LIMIT_DEFAULT=200 per day, 50 per hour
RATE_LIMIT_AGENTS=60 per minute
RATE_LIMIT_HEALTH=20 per minute

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_TTL=86400